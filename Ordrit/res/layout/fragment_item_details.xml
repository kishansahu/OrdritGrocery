<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        
        android:background="@color/actionbar_background">

        <Button
            android:id="@+id/itemDetailBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             android:layout_centerVertical="true"
            android:background="@drawable/ic_action_previous_item" />

        <com.ordrit.util.CalibriTextView
            android:id="@+id/catogeryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Item Details"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text_size" />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="vertical"
         >

        <com.ordrit.util.CalibriTextView
            android:id="@+id/textItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:text="@string/dummy_text"
            />
        

        <ImageView
            android:id="@+id/imageViewItemImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:src="@drawable/placeholder"/>
        
        <com.ordrit.util.CalibriTextView 
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:text="@string/dummy_text"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>
        
        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_gravity="center_horizontal"
             />
        
  <!--       <com.ordrit.util.CalibriEditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:cursorVisible="false"
            android:padding="5dp"
            android:lines="8"
            android:maxLines="5"
            android:hint="@string/add_note_for_item"
            android:minLines="3"
            android:background="@drawable/edit_text_style"
            android:scrollbars="vertical"
            /> -->
        
        <com.ordrit.util.CalibriButton
                android:id="@+id/buttonAddToBagOrder"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/btn_style"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/add_to_bag"
                android:textColor="@android:color/white" />
    </LinearLayout>

    

</LinearLayout>